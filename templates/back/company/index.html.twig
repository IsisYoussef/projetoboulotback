{% extends 'base.html.twig' %}

{% block title %}Liste des entrerpises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    <a href="{{ path('app_back_company_new') }}">Créer une entreprise</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Présentation</th>
                <th>Date de création</th>
                <th>MAJ</th>
                <th>Genre</th>
                <th>Siret</th>
                <th>Logo</th>
                <th>Nom de l'entreprise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.roles ? company.roles|json_encode : '' }}</td>
                <td>{{ company.password }}</td>
                <td>{{ company.firstname }}</td>
                <td>{{ company.lastname }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.postalCode }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.presentation }}</td>
                <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.gender }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.name }}</td>
                <td>
                    <a href="{{ path('app_back_company_show', {'id': company.id}) }}">Voir</a>
                    <a href="{{ path('app_back_company_edit', {'id': company.id}) }}">Modifier</a>
                </td>
            
            </tr>
        {% else %}
            <tr>
                <td colspan="18">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
