{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Phone</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Presentation</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Gender</th>
                <th>Siret</th>
                <th>Logo</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.roles ? company.roles|json_encode : '' }}</td>
                <td>{{ company.password }}</td>
                <td>{{ company.firstname }}</td>
                <td>{{ company.lastname }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.postalCode }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.presentation }}</td>
                <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.gender }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.name }}</td>
                <td>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_company_new') }}">Create new</a>
{% endblock %}
