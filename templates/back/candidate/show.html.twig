{% extends 'base.html.twig' %}

{% block title %}Candidate{% endblock %}

{% block body %}
    <h1>Candidate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidate.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ candidate.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ candidate.roles ? candidate.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ candidate.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ candidate.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ candidate.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ candidate.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ candidate.address }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ candidate.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ candidate.city }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ candidate.presentation }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ candidate.createdAt ? candidate.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ candidate.updatedAt ? candidate.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ candidate.gender }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ candidate.birthday ? candidate.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ candidate.avatar }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_candidate_index') }}">back to list</a>

    <a href="{{ path('app_back_candidate_edit', {'id': candidate.id}) }}">edit</a>

