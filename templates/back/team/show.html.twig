{% extends 'base.html.twig' %}

{% block title %}Team
{% endblock %}

{% block body %}
	<h1>Team</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id :</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email :</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Role :</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Mot de passe :</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Genre :</th>
				<td>{{ user.gender }}</td>
			</tr>
			<tr>
				<th>Prénom :</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom :</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Numéro de téléphone :</th>
				<td>{{ user.phone }}</td>
			</tr>
			<tr>
				<th>Adresse :</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>Code postal :</th>
				<td>{{ user.postalCode }}</td>
			</tr>
			<tr>
				<th>Ville :</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Commentaire :</th>
				<td>{{ user.presentation }}</td>
			</tr>
			<tr>
				<th>Fiche créée le :</th>
				<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Fiche mise à jour le :</th>
				<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('app_back_team_index') }}">Retour à la liste</a>

	<a href="{{ path('app_back_team_edit', {'id': user.id}) }}">Modifier</a>

	{{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
